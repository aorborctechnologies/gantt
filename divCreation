        <script type="text/javascript">
            $(document).ready(function(){
                // alert("hi");
            });
            $(".createBtn").click(function(){
                // $(".myDiv").fadeIn("slow");
                var count=$(".myInput").val();
                $('.divtoappend').html("");
                if (count>0) {
                    for (var i = 1; i <= count; i++) {
                        // $(".myDiv").css("animation-delay",i+"s");
                        $('.divtoappend').append("<div class='myDiv bg-primary animations shadow' > div " + i.toString() + "</div>");
                    }
                    $(".divtoappend").addClass("shadow p-3 myBorder pt-5 pb-5");
                }  
                else
                alert("input field can't be empty !")
            })
        </script>
